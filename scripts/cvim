#! /home/hattb/.rvm/bin/rvm-auto-ruby
require 'uri'
require 'cgi'

full_path = ARGV[0]

if full_path
  uri = URI::parse(full_path)
  vim_params = "--remote-tab-silent"

  if uri.query
    params = CGI::parse(uri.query)
    line = params["line"][0]
  end

  vim_params << " +#{line}" if line
  vim_params << %Q[ "#{uri.path}"]
end

`gnome-terminal -x vim --servername VIM #{vim_params}`
